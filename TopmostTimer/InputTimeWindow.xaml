        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TopmostTimer"
        mc:Ignorable="d"
        Title="Input Seconds" Height="221" Width="596">
    <Grid>
        <TextBox x:Name="TextSeconds" PreviewTextInput="TypeNumericValidation" DataObject.Pasting="PasteNumericValidation" HorizontalAlignment="Left" Margin="104,64,0,0" TextWrapping="Wrap" Text="60" VerticalAlignment="Top" Width="397"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="215,124,0,0" VerticalAlignment="Top" Width="212" Click="Button_Click"/>

    </Grid>
</Window>
